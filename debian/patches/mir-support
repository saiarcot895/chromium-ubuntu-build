+                                 unsigned parent,
+                                 unsigned x,
+                                 unsigned y,
+                                 ui::WidgetType type);
+  void OnWidgetImeReset();
+  void OnWidgetShowInputPanel();
+  void OnWidgetHideInputPanel();
+
+ private:
+  RemoteEventDispatcher* event_converter_;
+  DISALLOW_COPY_AND_ASSIGN(OzoneChannel);
