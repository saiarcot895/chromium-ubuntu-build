+  OZONECHARCODE_MINUS = 0x002D,  // -
+  OZONECHARCODE_PERIOD = 0x002E,  // .
+  OZONECHARCODE_SLASH = 0x002F,  // /
+  OZONECHARCODE_0 = 0x0030,  // Numbers.
+  OZONECHARCODE_1 = 0x0031,
+  OZONECHARCODE_2 = 0x0032,
