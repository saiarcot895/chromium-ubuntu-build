+  OZONECHARCODE_F = 0x0046,
+  OZONECHARCODE_G = 0x0047,
+  OZONECHARCODE_H = 0x0048,
+  OZONECHARCODE_I = 0x0049,
+  OZONECHARCODE_J = 0x004A,
+  OZONECHARCODE_K = 0x004B,
+  OZONECHARCODE_L = 0x004C,
+  OZONECHARCODE_M = 0x004D,
+  OZONECHARCODE_N = 0x004E,
