+{
+class NullIMEStateChangeHandler : public ui::IMEStateChangeHandler
+{
+  void ResetIme() {}
+  void ImeCaretBoundsChanged(gfx::Rect) {}
+  void ShowInputPanel() {}
+  void HideInputPanel() {}
+};
